<p id="notice"><%= notice %></p>
<div class="container" style="margin-top: 35px; margin-bottom: 0px;">
<%=render 'products/progress'%>

<div class="row">
  <div class='col-md-4 col-md-offset-1'>
    <div class="panel panel-default">
      <div class="panel-heading"><h2>Supplier/Quotes table</h2></div>
      <div class="panel-body">
        <% @product.quotes.each do |quote| %>
          <%= render 'quotes/quote', :quote=> quote %>
        <% end %>
     
      <%= button_to "New Quote", new_quote_path, remote: true, class: "btn btn-primary" %>
      </div>
    </div>
  </div>

  <div class='col-md-7'>
    <div class="panel panel-default">
      <div class="panel-heading"><h2>Product Name</h2></div>
      <div class="panel-body">
        <h3>Calculated value from selected quote</h3>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class='col-md-4 col-md-offset-1'>
    <div id="disqus_thread"></div>
  </div>
  <div class="col-md-7">
    <div class="panel panel-default">
      <div class="panel-heading"><h2>Supplier Interaction Emails</h2></div>
      <div class="panel-body">
        <p>@product.emails.each do |email|</p>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    /* * * CONFIGURATION VARIABLES * * */
    var disqus_shortname = 'stickeysource';
    var disqus_identifier = '<%= @product.id %>'; 
    var disqus_url = '<%= url_for([@product, {only_path: false}])%>'; 
    
    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
</script>
<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
</div>
</div>
