<p id="notice"><%= notice %></p>

<h1>Listing Emails</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Product</th>
      <th>Recipient</th>
      <th>Sender</th>
      <th>From</th>
      <th>Body</th>
      <th>Body plain</th>
      <th>Body html</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emails.each do |email| %>
      <tr>
        <td><%= email.company_id %></td>
        <td><%= email.product_id %></td>
        <td><%= email.recipient %></td>
        <td><%= email.sender %></td>
        <td><%= email.from %></td>
        <td><%= email.body %></td>
        <td><%= email.body_plain %></td>
        <td><%= email.body_html %></td>
        <td><%= email.created_at %></td>
        <td><%= email.updated_at %></td>
        <td><%= email.subject %></td>
        <td><%= link_to 'Show', email %></td>
        <td><%= link_to 'Edit', edit_email_path(email) %></td>
        <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Email', new_email_path %>
